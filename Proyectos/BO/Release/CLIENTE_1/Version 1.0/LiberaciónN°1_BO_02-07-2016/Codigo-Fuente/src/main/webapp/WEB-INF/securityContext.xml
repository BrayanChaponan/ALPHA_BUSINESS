<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:sec="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
     	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    	http://www.springframework.org/schema/security
    	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<!-- Activar anotaciones para Spring Security -->
	<sec:global-method-security
		pre-post-annotations="enabled" />

	<!-- Configuracion de seguridad para protocolo HTTP -->
	<sec:http auto-config="true" use-expressions="true">

		<!-- Interceptar acceso a los recursos de /pages/secured/** -->
		<sec:intercept-url pattern="/pages/secured/**"
			access="hasRole('ROLE_STANDARD')" />

		<!-- Permitir acceso a los recursos de /pages/unsecured/** -->
		<sec:intercept-url pattern="/pages/unsecured/**"
			access="permitAll" />

		<!-- Page level Spring Security : Intercept access to resources in /** -->
		<!-- <sec:intercept-url pattern="/**" access="hasRole('ROLE_STANDARD')"/> -->

		<!-- Permitir acceso a los recursos de resources (css, js, etc) -->
		<sec:intercept-url pattern="/resources/**" access="permitAll" />

		<!-- Activar recursos de JSF (Primefaces) -->
		<sec:intercept-url pattern="/javax.faces.resource/**"
			access="permitAll" />

		<!-- Definicion de pagina de Login para Spring Security -->
		<sec:form-login login-page="/pages/unsecured/login.xhtml" />

		<!-- Configuracion de Logout para Spring Security -->
		<sec:logout invalidate-session="true" delete-cookies="true"
			logout-success-url="/"></sec:logout>
	</sec:http>

	<!-- Establecer la clase UserDetailsServiceAuthImpl como el Administrador 
		de Autenticacion -->
	<sec:authentication-manager alias="authenticationManager">
		<sec:authentication-provider
			user-service-ref="userAuthService">
			<sec:password-encoder hash="plaintext"></sec:password-encoder>
		</sec:authentication-provider>
	</sec:authentication-manager>

	<!-- Injectar a la clase LoginMB el Administrador de Autenticacion -->
	<beans:bean id="secUserAuth" name="SecUserAuth"
		class="com.alphabuss.backoffice.controller.SecUserAuthMB" scope="prototype">
		<beans:property name="authenticationManager" ref="authenticationManager"></beans:property>
	</beans:bean>

</beans:beans>